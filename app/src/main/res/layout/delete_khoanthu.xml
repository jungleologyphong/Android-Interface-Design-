<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="400dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:layout_height="185dp"
        android:background="@drawable/bg_add"/>

    <View
        android:id="@+id/darker_gray"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_width="100dp"
        android:layout_height="5dp"
        android:background="#FFFFFF"></View>

    <TextView
        android:textAlignment="center"
        android:id="@+id/infoKhoanThu"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/darker_gray"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_button_rounded_copy"
        android:padding="15dp"
        android:text="Bạn có muốn xóa khoản thu ? "
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="italic"></TextView>
    <LinearLayout
        android:layout_below="@+id/infoKhoanThu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:id="@+id/btnDelete"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/infoKhoanThu"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="#FFFFFF"
        android:text="Có"

        android:textSize="20sp"></Button>

    <Button
        android:id="@+id/btnCancel"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/infoKhoanThu"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="#FFFFFF"
        android:text="Không"
        android:textSize="20sp"></Button>
    </LinearLayout>
</RelativeLayout>